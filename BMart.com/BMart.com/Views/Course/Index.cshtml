@*Instance of the course*@

@model BMart.com.Models.Course

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <thead>
        <th>Index</th>
    <th>Category</th>
    <th>Course Name</th>

    </thead>
    <tbody>
@foreach (var item in Model.GetCourses())
{
        <tr>
            <td>@item.Id</td>
            <td>@item.Category</td>
            <td>@item.Name</td>
        </tr>
}
    </tbody>

</table>


