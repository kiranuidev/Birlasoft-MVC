@model BMart.com.Models.WalmartInfo

@{
    ViewBag.Title = "WalMartProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("WalMartProducts", "Wallmart", FormMethod.Get))
{

<div class="col-md-12">
    <div class="col-md-3">
        <input type="text"  class="form-control" name="query"/>
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>

</div>
    if (Model != null && Model.items!=null)
    {
<table class="table table-hover">
    @foreach (var item in Model.items)
    {
    <tr>
        <td>
    @item.name
    </td>
    <td>@item.salePrice</td>
        <td>@item.salePrice</td>
        <td><img src=@item.thumbnailImage class="img-rounded" alt="Cinque Terre" width="100" height="100"></td>


    </tr>
    }

</table>
    }
}